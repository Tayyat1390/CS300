<p id="notice"><%= notice %></p>

<% content_for :page_title %>

<section class="section">
    <div class="container">
        <nav class="level">
          <!-- Left side -->
          <div class="level-left">
            <p>
              <strong>Project: </strong>
              <p class="strong">Data:</p>
                <%= render '/projects/data' %>
              <p>
                <%= @project.data %>
              </p>
            </p>
            <p class="level-item">
                <strong>Actions</strong>
            </p>
          </div>
          <!-- Right side -->
          <div class="level-right">
              <p class="level-item">
                <% if allow_project_modify?(@project) %>
                  <%= link_to "Edit", edit_project_path(@project), class:"button" %> |
                <% end %>
                <%= link_to 'Back', projects_path %>
              </p> 
          </div>
        </nav>
        <hr/>
    </div>
</section>

<section class="section comments">
    <div class="container">
        <h2 class="subtitle is-5"><strong><%= @project.comments.count %></strong> Comments</h2>
        <div class="comment-form">
            <hr />
            <h3 class="subtitle is-3">Leave a reply</h3>
              <%= render partial: 'comments/form', locals: {project: @project} %>
        </div>
        <ul class="list-group">
          <% @project.comments.each do |comment| %>
            <li class="list-group-item"><%= render comment %></li>
          <% end %>
        </ul>
    </div>
</section>
